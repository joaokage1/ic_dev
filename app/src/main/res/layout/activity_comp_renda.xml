<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.docs.CompRendaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/responsabilities"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_renda_autonomos"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/pontuacao_background"
                android:drawableStart="@android:drawable/ic_menu_save"
                android:text="RENDA PARA AUTÔNOMOS"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_comp_renda"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/pontuacao_background"
                android:drawableStart="@android:drawable/ic_menu_save"
                android:text="COMPROVAÇÃO DE RENDA"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_socioeconomica"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/pontuacao_background"
                android:drawableStart="@android:drawable/ic_menu_save"
                android:text="DECLARAÇÃO SOCIOECONÔMICA"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_semrenda"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/pontuacao_background"
                android:drawableStart="@android:drawable/ic_menu_save"
                android:text="DECLARAÇÃO PESSOA SEM RENDA"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>